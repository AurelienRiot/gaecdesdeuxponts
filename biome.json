{
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "organizeImports": {
    "enabled": false
  },

  "linter": {
    "enabled": true,
    "rules": {
      "correctness": {
        "useExhaustiveDependencies": "off"
      },
      "complexity": {
        "noUselessFragments": "off",
        "useLiteralKeys": "off",
        "noBannedTypes": "off"
      },
      "a11y": {
        "noSvgWithoutTitle": "off",
        "noAriaHiddenOnFocusable": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "off",
        "noExplicitAny": "off",
        "noConfusingVoidType": "off"
      },
      "style": {
        "useTemplate": "off",
        "noUnusedTemplateLiteral": "off",
        "useSelfClosingElements": "off"
      }
    }
  }
}
